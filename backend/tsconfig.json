{
  "include": ["./src/**/*"],
  "exclude": ["node_modules/*", "./dist/**/*"],
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "lib": ["esnext", "dom"]
  }
}
